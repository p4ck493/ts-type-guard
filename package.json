{
  "name": "@p4ck493/ts-type-guard",
  "version": "1.0.0-beta.0",
  "description": "The package for auto unsubscribe in typescript.",
  "type": "commonjs",
  "main": "dist/index.js",
  "module": "dist/index.m.js",
  "umd:main": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "source": "src/index.ts",
  "scripts": {
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "test": "jest --config jestconfig.json",
    "dev": "microbundle watch",
    "build": "microbundle",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "publish": "npm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/p4ck493/ts-type-guard.git"
  },
  "files": [
    "dist/**/*"
  ],
  "bugs": {
    "url": "https://github.com/p4ck493/ts-type-guard/issues"
  },
  "homepage": "https://github.com/p4ck493/ts-type-guard#readme",
  "keywords": [
    "Decorator",
    "JavaScript",
    "Check Method",
    "Check",
    "Guard Type",
    "TypeScript",
    "Type",
    "Guard"
  ],
  "author": "p4ck493",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^28.1.3",
    "codelyzer": "^6.0.2",
    "jest": "^28.1.1",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.5",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.7.4",
    "microbundle": "^0.15.1"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "lib/methods/**",
      "lib/wrappers/**"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/.git/",
      "<rootDir>/.DS_Store/",
      "<rootDir>/.vs/",
      "<rootDir>/.vscode/",
      "<rootDir>/lib/",
      "<rootDir>/node_modules/",
      "<rootDir>/src/"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "<rootDir>/tsconfig.test.json",
        "stringifyContentPathRegex": "\\.html$"
      }
    }
  },
  "directories": {
    "lib": "lib"
  },
  "dependencies": {
    "@p4ck493/ts-is": "^3.0.4-beta.0"
  }
}
